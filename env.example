# Notion Integration Token (get from https://www.notion.so/my-integrations)
NOTION_TOKEN=secret_xxx

# Notion Database ID (optional, can also use --db flag)
NOTION_DB_ID=

# OpenAI API Key for AI triage (optional)
OPENAI_API_KEY=sk-...

# Enable AI triage (default: true, set to false to save costs)
AI_TRIAGE=true

# AI model to use (gpt-4o-mini = $0.30-0.90/month, gpt-3.5-turbo = cheaper but lower quality)
AI_MODEL=gpt-4o-mini

# Max tokens for AI response per article (default: 400)
AI_MAX_TOKENS=400

# Number of articles to analyze per AI API call (default: 10)
AI_BATCH_SIZE=10

# Number of parallel AI batch calls (default: 5)
AI_CONCURRENCY=5

# Generate AI summaries/abstracts (default: true)
AI_SUMMARY=true

# Max tokens for AI summary per article (default: 180)
AI_SUMMARY_MAX_TOKENS=180

# Validate links before inserting (default: true)
LINK_VALIDATE=true

# Link validation timeout in milliseconds (default: 8000)
LINK_TIMEOUT_MS=8000

# Delay between API requests in milliseconds (default: 1000, helps with rate limits and conflicts)
REQUEST_DELAY_MS=1000

# Log level: quiet (errors only), normal (default), verbose (debug info)
LOG_LEVEL=normal

# Auto-disable feeds below this quality threshold (0.1 = 10%)
AUTO_DISABLE_THRESHOLD=0.1

# Minimum articles required before auto-disabling a feed
AUTO_DISABLE_MIN_SAMPLE=20

# Global timeout in minutes (kills the process if it runs too long)
GLOBAL_TIMEOUT_MINUTES=10

# OPML file path (optional, can also use --opml flag)
OPML_PATH=./feeds.opml

# Only import articles published in the last N days (0 = no limit, imports all)
MAX_ARTICLE_AGE_DAYS=7

# Limit number of articles to process per run (0 = no limit, useful for testing)
MAX_ARTICLES=0

# Auto-archive items if Status=Read and older than this (days)
PRUNE_MAX_AGE_DAYS=30

# Keep only latest N items per feed (archive older)
PER_FEED_HARD_CAP=500

# Local file for dedupe state (relative or absolute path)
STATE_FILE=.rss_seen.json

# Create Notion pages in batches of this size (lower = slower but avoids rate limits)
BATCH_SIZE=5

# Number of parallel feed fetches
CONCURRENCY=2

