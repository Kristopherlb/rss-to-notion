# Notion Integration Token (get from https://www.notion.so/my-integrations)
NOTION_TOKEN=secret_xxx

# Notion Database ID (optional, can also use --db flag)
NOTION_DB_ID=

# OPML file path (optional, can also use --opml flag)
OPML_PATH=./feeds.opml

# Auto-archive items if Status=Read and older than this (days)
PRUNE_MAX_AGE_DAYS=30

# Keep only latest N items per feed (archive older)
PER_FEED_HARD_CAP=500

# Local file for dedupe state (relative or absolute path)
STATE_FILE=.rss_seen.json

# Create Notion pages in batches of this size (lower = slower but avoids rate limits)
BATCH_SIZE=5

# Number of parallel feed fetches
CONCURRENCY=2

